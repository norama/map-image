{
    "compilerOptions": {
        "target": "es2018",
        "module": "esnext",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017", "dom"],
        "strict": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "outDir": "out-tsc",
        "sourceMap": true,
        "inlineSources": true,
        "rootDir": "./",
        "incremental": true,
        "paths": {
            "tslib": ["./node_modules/tslib/tslib.d.ts"]
        }
    },
    "include": ["**/*.ts"]
}
